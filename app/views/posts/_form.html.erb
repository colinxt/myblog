<%= form_for @post do |f| %>
    <div class="field">
      <%= f.text_field :title %>
    </div>

    <div class="field">
        <%= f.text_area :content, rows: 20, cols: 80 %>
    </div>

    <div class="field">
        <%= f.select :public, [['Public', true], ['Private', false]] %>
    </div>

    <div class="field">
        <%= f.select :lang, [['English', 'eng'], ['Chinese', 'chn']] %>
    </div>

    <div class="field">
        <%= f.label :tag_list, "Tags" %><br />
        <%= f.text_field :tag_list %>
    </div>

    <%= f.submit "Post", class: "btn" %>
<% end %>