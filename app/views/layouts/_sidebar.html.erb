<aside class="group">
    <%= image_tag("head_85.png") %>
    <nav id="navbar">
        <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "About Me", about_path %></li>
            <% if signed_in? %>
                <div id="shortcut">
                    <li><%= link_to "New Post", new_post_path %></li>
                    <% if @post && !@post.id.nil? %>
                        <li><%= link_to "Edit Post", edit_post_path %></li>
                        <li><%= link_to "Delete Post", post_path(@post), method: "delete", confirm: "Are you sure to delete?" %></li>
                    <% end %>
                    
                    <li><%= link_to "Sign Out", chulai_path, method: "delete" %></li>
                </div>
            <% end %>
            <div id="tag-list">
                <% Tag.all.each do |t| %>
                    <li><%= link_to t.name, tag_path(t.name) %>(<%= t.posts.size %>)</li>
                <% end %>
            </div>
        </ul>
    </nav>

    <!-- Add a list of tags here -->

</aside>